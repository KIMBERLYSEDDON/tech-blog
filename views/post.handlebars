<section class="card w-50 p-b-5 m-2 mx-auto post-card">
  <a href="/post/{{id}}">
    <div class="card-body">
      <h5 class="card-header post-header">{{title}}</h5>
      <p class="text-end creator"> by user: {{user.username}}, on {{format_date date_posted}}</p>
      <p class="card-text post-content">{{content}}</p>
    </div>
  </a>
</section>
<section class="comments">
  {{#each comment}}
  <div class="card">
  <div class="card-header">
    {{user.username}}
  </div>
  <div class="card-body">
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
  </div>
</div>
  {{/each}}
</section>
 {{#if comments}}
<section class="card w-50 p-b-5 m-2 mx-auto comments">
    <ul class="list-group list-group-flush">
 {{#each comments as |comment|}}
    <li class="list-group-item">{{comment.message}}<p class="pt-3 mb-0 text-end comuser">{{comment.username}} on {{format_date date_posted}}</p>
              {{#if comment.displayDelete}}

          <button id="delBtn" class="button" data-id="{{comment.id}}"><i class="far fa-trash-alt"></i></button>
          {{/if}}</li>
 {{/each}}
 </ul> 
</section>
{{/if}}
<section class="card w-50 p-b-5 m-2 mx-auto">
  <form class="form new-comment-form">
  <h3 class="comment-title">Leave a comment here!</h3>
  <div class="mb-3">
    <label for="usernameInput" class="form-label">Username</label>
    <input
      type="text"
      class="form-control"
      id="usernameInput"
      value="{{username}}"
    />
  </div>
  <div class="mb-3">
    <label for="message" class="form-label">Comment</label>
    <textarea class="form-control" id="message" data-post-id="{{id}}" rows="3"></textarea>
  </div>
  <div class="form-label">
          <button type="submit" class="btn btn-primary">Post</button>
        </div>
  </form>
</section>

